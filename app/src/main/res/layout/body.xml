<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
    >
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  android:orientation="horizontal"
                  android:layout_width="fill_parent"
                  android:layout_height="wrap_content"
                  android:background="@drawable/gradients">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView"
            android:layout_gravity="left|center_vertical"
            android:src="@drawable/rssicon" android:contentDescription="@string/descriptionIconRSS"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/bodyText"
            android:id="@+id/textView"
            android:layout_gravity="center"
            android:padding="10dp"
            android:textColor="@color/colorFeedHunter"
            android:textSize="30dp"/>
    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/labelConnect"
        android:id="@+id/buttonConnect"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:textSize="40dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/defaultLabelValue"
        android:id="@+id/labelArticlesCountPodcasters"
        android:layout_gravity="center_vertical|right" android:phoneNumber="true"/>
</LinearLayout>

